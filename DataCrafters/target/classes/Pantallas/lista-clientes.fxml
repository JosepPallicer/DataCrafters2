<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Vista.Controller">
    <AnchorPane VBox.vgrow="ALWAYS">
            <Label layoutX="132.0" text="Lista de clientes" textFill="#288bb5">
               <font>
                  <Font size="54.0" />
               </font>
            </Label>
            <TableView fx:id="tablaClientes" layoutX="11.0" layoutY="87.0" prefHeight="245.0" prefWidth="622.0">
              <columns>
                  <TableColumn fx:id="idClienteLista" prefWidth="19.0" text="ID" />
                <TableColumn fx:id="nifClienteLista" prefWidth="70.0" text="NIF" />
                <TableColumn fx:id="emailClienteLista" prefWidth="108.0" text="Email" />
                  <TableColumn fx:id="nombreClienteLista" minWidth="0.0" prefWidth="79.0" text="Nombre" />
                  <TableColumn fx:id="apellido1ClienteLista" prefWidth="82.0" text="Apellido 1" />
                  <TableColumn fx:id="apellido2ClienteLista" prefWidth="90.0" text="Apellido 2" />
                  <TableColumn fx:id="domicilioClienteLista" prefWidth="103.0" text="Domicilio" />
                  <TableColumn fx:id="tipoClienteLista" prefWidth="70.0" text="Tipo" />
              </columns>
            </TableView>
            <Button layoutX="273.0" layoutY="357.0" mnemonicParsing="false" text="Actualizar lista" onAction="#botonActualizarClientes">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
    </AnchorPane>
</VBox>
